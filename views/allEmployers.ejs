<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClubDen | Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section>
        <nav>
            <img src="/img/logo.png" alt="ClubDen">

            <!-- Hamburger Menu Icon -->
            <div class="menu-toggle">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <!-- End of Hamburger Menu Icon -->

            <ul class="nav-list left">
                <li><a href="/">Home</a></li>
                <li><a href="/allJobs">Current Club Openings</a></li>
                <li><a class="active" href="/allEmployers">Club Details</a></li>
            </ul>
        </nav>
    </section>

    <section>
        <div class="header">
            <h1>Clubs Live Right Now</h1>
        </div>
    </section>

    <section>
        <div class="job-cards-containers" id="job">
            <div class="job-card" >
                <% for (var i = 0; i < employer.length; i++) { %> 
                    <p>Club Name: <%= employer[i].name %> </p>
                    <br>
                    <p>Email: <%= employer[i].email %> </p> 
                    <br>
                    <p>Website: <%= employer[i].website %> </p> 
                    <br>
                    <p>Description: <%= employer[i].description %> </p> 
                    <br>
                    <% if (i != employer.length-1) {%> 
                        <hr>
                    <% } %> 
                    <br>
                <% } %> 
            </div>
        </div>
    </section>
    <script>
        const menuToggle = document.querySelector('.menu-toggle');
        const navList = document.querySelector('.nav-list');

        menuToggle.addEventListener('click', () => {
            navList.classList.toggle('active');
        });
    </script>
    <script src="./allJobs.js"></script>
</body>

<footer>
    <div class="copyright">
        <p>Copyright &copy; 2023 ClubDenÎ² Version. All rights reserved to the Developers Love, Uday & Shaurya</p>
    </div>
</footer>

</html>
