<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClubDen | Club</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section>
        <nav>
            <img src="/img/logo.png" alt="ClubDen">
            
            <!-- Hamburger Menu Icon -->
            <div class="menu-toggle">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <!-- End of Hamburger Menu Icon -->
            
            <ul class="nav-list left">
                <li><a href="/">Home</a></li>
                <li><a href="/allJobs">Current Club Openings</a></li>
                <li><a href="/allEmployers">Club Details</a></li>
            </ul>
        </nav>
    </section>
    <section>
        <div class="header">
            <h1>Official Club Member Login</h1>
        </div>
    </section>
    <section>
        <div class="form-container">
            <div class="icon-container">
                <img src="/img/login.gif" style="height:150px">
            </div>
            <form action="/employerLogin" method="post" id="companyLogin">
                <input type="email" name="email" placeholder="Email ID" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
            <br>
            <hr>
            <br>
            <div class="below-form">
                <h5>Haven't registered yet? <a href="/employerSignup">Sign Up</a></h5>
            </div>
        </div>
    </section>
    <div class="error-mssg">
        <% if (messages.error) { %>
            <%= messages.error %>
        <% } %>
    </div>
    <hr>
    <section>
    </section>
    <script src="./companyLogin.js"></script>
    <script type="text/javascript">
        const menuToggle = document.querySelector('.menu-toggle');
        const navList = document.querySelector('.nav-list');

        menuToggle.addEventListener('click', () => {
            navList.classList.toggle('active');
        });
    </script>
</body>

<footer>
    <div class="copyright">
        <p>Copyright &copy; 2023 ClubDenÎ² Version. All rights reserved to the Developers Love, Uday & Shaurya</p>
    </div>
</footer>

</html>
