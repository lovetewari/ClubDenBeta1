<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .button-container {
            margin-bottom: 20px;
        }

        .button-container button {
            padding: 10px 20px;
            font-size: 1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 20px;
        }

        #company button {
            background-color: #28a745; /* Green color for the Logout button */
            color: white;
        }

        #delete-account button {
            background-color: #dc3545; /* Red color for the Delete Account button */
            color: white;
        }

        .button-container button:hover {
            opacity: 0.8;
        }
    </style>
</head>

<body>
    <section>
        <nav>
            <img src="/img/logo.png" alt="ClubDen">
            
            <!-- Hamburger Menu Icon -->
            <div class="menu-toggle">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>>
            </div>
            <!-- End of Hamburger Menu Icon -->

            <ul class="nav-list left">
                <li><a class="active" href="/candidateHome">User Privacy</a></li>
                <li><a href="/searchJobs">Search Current Club Openings</a></li>
                <li><a href="/updateCandidate">Edit Profile</a></li>
                <li><a href="https://srm-clubs.vercel.app/">SRM Nexus</a></li>
            </ul>
        </nav>
    </section>

    <section>
        <div class="header">
            <h1>Candidate Home page</h1>
            <br>
            <br>
            <h3>Welcome back, <%= firstname %></h3>
        </div>
        <% var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }; %> 
        <div class="profile-body">
            <!-- ... your existing content ... -->
            <h3>Personal Details</h3>
            <br>
            <p>First name : <%= firstname %></p>
            <br>
            <p>Middle name : <%= middlename %></p>
            <br>
            <p>Last name : <%= lastname %></p>
            <br>
            <p>Email : <%= email %></p>
            <br>
            <p>Mobile Number : <%= mobileNO %></p>
            <br>
            <p>Birth date : <%= dob.toLocaleDateString("en-US", options) %></p>
            <br>
            <p>Gender : <%= gender %></p>
            <br>
            <br>
            <h3>Educational Details</h3>
            <br>
            <p>College : <%= college %></p>
            <br>
            <p>Degree : <%= degree %></p>
            <br>
            <p>Expected year of passing : <%= batch %></p>
            <br>
            <p>Current CGPA : <%= cpi %></p>
            <br>
            <p>Skills : <%= skills %></p>
            <br>
            <p>Resume : <%=resume %></p>
            <br>
        </div>
        <br>
        <br>
        <div id="company" class="button-container">
            <form action="/logoutCandidate?_method=DELETE" method="POST">
                <button type="submit">Log Out</button>
            </form>
        </div>
        <div id="delete-account" class="button-container">
            <form action="/deleteCandidate" method="POST">
                <button type="submit" id="delete-btn">Delete Account</button>
            </form>
        </div>
    </section>

    <script>
        const menuToggle = document.querySelector('.menu-toggle');
        const navList = document.querySelector('.nav-list');

        menuToggle.addEventListener('click', () => {
            navList.classList.toggle('active');
        });

        document.getElementById("delete-btn").addEventListener("click", function () {
            if (!confirm("Are you sure you want to delete your account?")){
                event.preventDefault();
            }
        }); 
    </script>

</body>

<footer>
    <div class="copyright">
        <p>Copyright &copy; 2023 ClubDenÎ² Version. All rights reserved to the Developers Love, Uday & Shaurya</p>
    </div>
</footer>

</html>

